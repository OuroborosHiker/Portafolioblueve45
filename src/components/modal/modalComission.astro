---
import "../../styles/base.css"
import ModalCartoon from "./modalCartoon.astro"
import ModalSemirealista from "./modalSemirealista.astro"
import ModalChibi from "./modalChibi.astro"

---
<div
  x-cloak
  x-show="modalIsOpen"
  x-transition.opacity.duration.200ms
  x-trap.inert.noscroll="modalIsOpen"
  x-on:keydown.esc.window="closeModal()"
  x-on:click.self="closeModal()"
  class="fixed inset-0 z-30 flex items-end justify-center bg-black/20 p-4 pb-8 backdrop-blur-md sm:items-center lg:p-8"
  role="dialog"
  aria-modal="true"
>
  <div
    x-show="modalIsOpen"
    x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
    x-transition:enter-start="opacity-0 scale-50"
    x-transition:enter-end="opacity-100 scale-100"
    class="flex max-w-3xl w-full flex-col gap-4 overflow-hidden rounded-sm border border-neutral-300 bg-white text-neutral-600 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300"
  >
    <!-- Header genérico del modal -->
    <div class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 p-4 dark:border-neutral-700 dark:bg-neutral-950/20">
      <h3 class="font-semibold tracking-wide text-neutral-900 dark:text-white">
        Detalles de la categoría
      </h3>
      <button x-on:click="closeModal()" aria-label="close modal">
        <!-- icono SVG -->
      </button>
    </div>

    <!-- Contenido dinámico por categoría -->
    <div class="px-4 py-6">
      <div x-show="modalKey === 'cartoon'">
        <ModalCartoon />
      </div>
      <div x-show="modalKey === 'semirealista'">
        <ModalSemirealista />
      </div>
      <div x-show="modalKey === 'chibi'">
        <ModalChibi />
      </div>
    </div>

    <!-- Footer genérico -->
    <div class="flex justify-end gap-2 border-t border-neutral-300 bg-neutral-50/60 p-4 dark:border-neutral-700 dark:bg-neutral-950/20">
      <button
        x-on:click="closeModal()"
        type="button"
        class="whitespace-nowrap rounded-sm px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-600 transition hover:opacity-75"
      >
        Cerrar
      </button>
    </div>
  </div>
</div>